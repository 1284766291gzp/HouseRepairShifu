<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <View
        android:layout_width="match_parent"
        android:background="@color/line230"
        android:layout_height="0.5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rl_usericon"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            >
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_yan"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:text="头像"
                android:textColor="@color/txt_51"
                android:textSize="15sp"  />


            <com.lxkj.houserepairshifu.app.view.CircleImageView
                android:id="@+id/img_usericon"
                android:layout_toLeftOf="@+id/image"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:src="@drawable/grenzhongxin_touxiang"
              />

            <ImageView
                android:layout_marginLeft="14dp"
                android:id="@+id/image"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/jinru"/>
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="姓名"
                android:textColor="@color/txt_51"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_name"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:text="张三"
             />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/rl_change_bind_phone"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="联系方式"
                android:textColor="@color/txt_51"
                android:textSize="15sp" />

            <TextView
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/jinru"
                android:id="@+id/txt_tel"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15112312546"
                />
        </RelativeLayout>



        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:id="@+id/rl_change_position"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="所在地"
                android:textColor="@color/txt_51"
                android:textSize="15sp"  />

            <TextView
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/jinru"
                android:id="@+id/txt_position"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="河南-郑州"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>

        <RelativeLayout
            android:id="@+id/rl_modify_login_pswd"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="实名认证"
                android:textColor="@color/txt_51"
                android:textSize="15sp"  />

            <TextView
                android:layout_marginRight="30dp"
                android:id="@+id/txt_certification"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已认证"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="质量分"
                android:textColor="@color/txt_51"
                android:textSize="15sp"  />

            <TextView
                android:layout_marginRight="30dp"
                android:id="@+id/txt_1"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal">

            <TextView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="企业认证"
                android:textColor="@color/txt_51"
                android:textSize="15sp"  />

            <TextView
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/jinru"
                android:id="@+id/txt_2"
                android:layout_centerVertical="true"
                android:textColor="@color/txt_153153153"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="申请"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


    </LinearLayout>



</LinearLayout>