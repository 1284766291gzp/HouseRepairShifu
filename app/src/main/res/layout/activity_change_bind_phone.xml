<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_247"
    android:orientation="vertical">

    <include layout="@layout/top_title" />

    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="14dp"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="手机号码："
                android:textColor="@color/txt_26"
                android:textSize="15sp" />

            <EditText
                android:textColorHint="@color/txt_179179179"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:hint="请输入新的手机号码"
                android:inputType="number"
                android:padding="8dp"
                android:singleLine="true"
                android:textSize="14sp" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            >

            <TextView
                android:layout_marginLeft="14dp"
                android:id="@+id/tv_yan"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码："
                android:textColor="@color/txt_26"
                android:textSize="15sp"  />

            <EditText
                android:layout_centerVertical="true"
                android:textColorHint="@color/txt_179179179"
                android:id="@+id/et_verification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tv_yan"
                android:layout_toLeftOf="@+id/tv_get_ver"
                android:background="@color/colorWhite"
                android:hint="请输入短信验证码"
                android:inputType="number"
                android:maxLength="6"
                android:padding="8dp"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView

                android:gravity="center"
                android:id="@+id/tv_get_ver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/get_verification_code_bg"
                android:layout_marginRight="10dp"
                android:text="免费获取"
                android:padding="8dp"
                android:textColor="@color/txt_2557016"
                android:textSize="13sp" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:background="@color/line230"
            android:layout_height="0.5dp"/>


    </LinearLayout>


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/tv_change"
        android:layout_width="330dp"
        android:layout_height="46dp"
        android:layout_marginTop="95dp"
        android:background="@drawable/button_click"
        android:gravity="center"
        android:text="更改绑定"
        android:textColor="@color/colorWhite"
        android:textSize="17sp" />


</LinearLayout>